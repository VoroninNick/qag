#home-slider-section
  text-align: center

  .slides

    top: 0
    position: absolute
    left: 0
    width: 100%
    height: 100%
    overflow: hidden
    margin: 0
    padding: 0
    .slide
      top: 0
      left: 0
      background: red


      //opacity: 0

      height: 100%
      position: absolute
      width: 100%

      &:first-child
        opacity: 1
      .image-background
        height: 100%
        display: block
        background-size: cover
        img
          opacity: 0

      @for $i from 1 through $main-slider-slides-count
        &#slide-#{$i}
          z-index: $i


  .bullets
    display: inline-block
    position: absolute
    bottom: 150px
    z-index: #{$main-slider-slides-count + 2}

    li
      display: inline-block
      margin-left: $bullet-indent
      &:first-child
        margin-left: 0

      label
        display: block
        background: $bullet-background
        //background: $active-bullet-background
        width: $bullet-with
        height: $bullet-height
        border-radius: $bullet-border-radius
        cursor: pointer




  @for $i from 1 through 3
    .home-slider-slide-flag#home-slider-slide-flag-#{$i}
      &:checked
        & ~ .slides
          .slide#slide-#{$i}
            z-index: #{$main-slider-slides-count + 1}



        & ~ .bullets
          .home-slider-slide-label#home-slider-slide-label-#{$i}
            label
              background: $active-bullet-background
              cursor: default








#home-featured-events-section
  background: $skyblue-color
  color: white


  .event-info-slides
    padding-bottom: $featured-events-timeline-height
    height: 100%

    .event-info-slides-row
      height: 100%

      .prev-event-labels
        li
          display: none

      > ul
        padding-left: 0

      ul
        width: 100%
        display: block
        margin: 0
        li.event
          background: $skyblue-color
          height: 100%
          width: 100%
          list-style: none
          display: inline-block
          padding: 4rem 0 0 0

          .image-and-info
            .image
              a
                img
            .info
              .start-date, .end-date
                display: inline-block

                .tip
                  display: block
                .value
                  font-size: 1.2rem
                  font-weight: 500

              .start-date:after
                content: "\2014"
                display: inline-block
                margin: 0 1rem 0 1rem
                font-size: 1.2rem

              .participants-count
                svg
                  width: 40px
                  height: 30px
                  margin-right: 5px
                .count
                  font-size: 1.5rem
                  font-weight: 600
                  vertical-align: top
                  line-height: 30px
                .participants-tip
                  vertical-align: top
                  line-height: 30px
                  font-size: 1.1rem
                  font-weight: 100


          .description
            .event-title
              font-size: 2rem
            .event-description
              padding-top: 2rem
              font-weight: 300
              line-height: 1.3
          .event-link-and-register-button
            clear: left

            .event-link-wrapper
              height: 0
              text-align: right

              .event-link
                line-height: 3.75rem




            .register-button
              label
                height: 3.75rem
                display: inline-block
                background: $registration-button-background
                width: 100%
                text-align: center
                border-radius: 3px
                cursor: pointer

                svg
                  display: inline-block
                  position: relative
                  top: rem-calc(10)
                  width: 2.5rem
                  height: 2.5rem

                  .clock-arrow, .clock-round, .clock-fire
                    fill: white


                .registration-text
                  font-size: 2rem
                  text-transform: uppercase
                  font-size: 1.3rem
                  font-weight: 700








  .timeline
    height: $featured-events-timeline-height
    position: absolute
    bottom: 0
    width: 100%
    background: $light-skyblue-color

    .time-line-row
      position: relative
      overflow: hidden

      .events-container
        position: relative
        width: #{100% * ($featured-events-timeline-pages-count)}




    .event
      display: inline-block
      width: #{100% / ($featured-events-count)}
      text-align: center

      // draw triangle on selected event
      &:before
        width: 0
        height: 0
        border-style: solid
        border-width: 15px 15px 0 15px
        border-color: #30addb transparent transparent transparent
        line-height: 0px
        _border-color: #30addb #000000 #000000 #000000
        _filter: progid:DXImageTransform.Microsoft.Chroma(color='#000000')
        -webkit-transform: rotate(360deg)
        position: relative
        top: 14px


      .event-label
        display: block
        cursor: pointer

      .date
        color: $featured-events-timeline-inactive-event-text-color
        height: 5rem


        .day-number

          font-size: 4rem
          font-weight: 900
          line-height: 0.9
          @include transition-duration(1s)
          @include transition-property(font color)
        .month
          font-size: 1rem
          line-height: 1
          font-weight: 600
          text-transform: uppercase

    .bullet
      display: block
      text-align: center
      overflow: hidden

      .render-bullet
        display: inline-block
        width: 1rem
        height: 1rem
        border-radius: 50%
        background: $featured-events-timeline-bullet-background
        cursor: pointer
        position: relative


        &:after
          content: ""
          position: absolute
          top: 8px
          left: 16px
          height: 1px
          width: 200px
          display: inline-block
          border-top: #a9a7ac 1px dashed


        &:before
          content: ""
          position: absolute
          top: 8px
          //left: 16px
          height: 1px
          width: 200px
          display: inline-block
          border-top: #a9a7ac 1px dashed
          left: auto
          right: 16px


    .event:first-child
      .bullet
        label:before
          content: none

    .event:last-child
      .bullet
        label:after
          content: none

    ul.prev-event-labels












  @for $i from 1 through $featured-events-count
    .home-featured-events-timeline-flag#home-featured-events-timeline-flag-#{$i}
      &:checked
        & ~ .event-info-slides
          .event#event-#{$i}
            //z-index: #{$main-slider-slides-count + 1}
            //display: block
            z-index: 2


        & ~ .timeline
          .event#event-#{$i}

            // enable triangle
            &:before
              content: ""

            #event-#{$i}-label
              cursor: default


              .date
                color: $featured-events-timeline-active-event-text-color
                padding-bottom: 1rem
                height: 8rem

                .day-number
                  height: 5rem
                  font-size: 6rem
                .month
                  font-size: 1.5rem
              .bullet
                .render-bullet
                  background: $featured-events-timeline-active-bullet-background
                  cursor: default

