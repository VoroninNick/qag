- if !user_signed_in?
  #devise-content
    #devise_sessions-new-get-form-wrap.devise-form-wrap
      .form-title
        = t('devise.sessions.header')
      = simple_form_for(:user, as: :user, url: session_path(:user)) do |f|
        .form-inputs
          = f.input :email, required: false, autofocus: true, label: false, placeholder: t('devise.sessions.placeholders.email')
          = f.input :password, required: false, label: false, placeholder: t('devise.sessions.placeholders.password')
          = f.input :remember_me, as: :boolean, label: t('devise.sessions.remember_me') 
          - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
            = link_to t('shared.links.forgot_password'), new_password_path(resource_name), class: 'forgot-password link-to-input', data: { input: "#devise_passwords-new-get-flag" }
        .form-actions
          - if devise_mapping.registerable? && controller_name != 'registrations'
            .sign-up-link-wrapper
              = link_to t('shared.links.sign_up'), new_registration_path(resource_name), class: 'sign-up link-to-input', data: { input: "#devise_registrations-new-get-flag" }
        .sign-in-submit-button-wrapper
          = f.button :submit, t('devise.sessions.sign_in_button'), class: 'sign-in-submit-button devise-submit-button'

    / render "devise/shared/links"

