- if user_signed_in?
  #devise-content
    #devise_sessions-new-get-form-wrap.devise-form-wrap
      .form-title
        = "Реєстрація на подію"
      .event-reg
      	.event-reg-1
      	  = raw "#{@user.first_name}, Ви збираєтесь зареєструватись на курс &laquo;#{@event.name}&raquo;."
      	.event-reg-2
      	  = "Перевірте особисті дані, якщо необхідно введіть корективи та підтвердіть реєстрацію."
      = simple_form_for(@user, as: :user, url: session_path(:user, locale: I18n.locale)) do |f|
        .form-inputs
          = f.input :first_name, required: false, autofocus: true, label: t('devise.sessions.placeholders.first_name'), placeholder: t('devise.sessions.placeholders.first_name'), value: @user.first_name
          = f.input :last_name, required: false, label: t('devise.sessions.placeholders.last_name'), placeholder: t('devise.sessions.placeholders.last_name'), value: @user.last_name

          = f.input :email, as: :boolean, label: false, placeholder: t('devise.sessions.placeholders.email'), value: @user.email

          = f.input :contact_phone, label: t('devise.sessions.placeholders.contact_phone'), placeholder: t('devise.sessions.placeholders.contact_phone'), value: @user.contact_phone 
          /- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
          = link_to t('shared.links.forgot_password'), new_password_path(:user, locale: I18n.locale), class: 'forgot-password link-to-input', data: { input: "#devise_passwords-new-get-flag" }
        .form-actions
          - if 1 == 1 || devise_mapping.registerable? && controller_name != 'registrations'
            .sign-up-link-wrapper
              = link_to t('shared.links.sign_up'), new_registration_path(:user, locale: I18n.locale), class: 'sign-up link-to-input', data: { input: "#devise_registrations-new-get-flag" }
        .sign-in-submit-button-wrapper
          = f.button :submit, t('devise.sessions.sign_in_button'), class: 'sign-in-submit-button devise-submit-button'

    / render "devise/shared/links"

